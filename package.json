{
  "author": "",
  "bugs": {
    "url": "https://github.com/finleyfamily/action-enforce-branch-name/issues"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1"
  },
  "description": "GitHub Action to enforce a branch naming convention.",
  "devDependencies": {
    "@eslint/compat": "^1.3.0",
    "@itprokyle/cspell-dict": "^1.3.0",
    "@jest/globals": "^30.0.0",
    "@octokit/webhooks-types": "^7.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.13.8",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vercel/ncc": "^0.38.3",
    "cspell": "^9.1.1",
    "eslint": "^9.29.0",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^29.0.0",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-prettier": "^5.5.0",
    "jest": "^30.0.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.4.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "homepage": "https://github.com/finleyfamily/action-enforce-branch-name",
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "license": "Apache-2.0",
  "name": "action-enforce-branch-name",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/finleyfamily/action-enforce-branch-name.git"
  },
  "scripts": {
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package",
    "bundle": "npm run format:write && npm run package",
    "ci-test": "npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:check": "npx prettier --check .",
    "format:write": "npx prettier --write .",
    "lint": "npx eslint .",
    "package": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "npx jest"
  },
  "version": "0.0.0"
}
