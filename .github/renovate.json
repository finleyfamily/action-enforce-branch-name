{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>finleyfamily/renovate"
    ],
    "gitIgnoredAuthors": [
        "github_actions",
        "github-actions",
        "github-actions[bot]"
    ],
    "packageRules": [
        {
            "extends": [
                "monorepo:eslint",
                "monorepo:typescript-eslint"
            ],
            "groupName": "eslint",
            "matchPackageNames": [
                "/^eslint-.*/"
            ]
        },
        {
            "extends": [
                "monorepo:jest"
            ],
            "groupName": "jest",
            "matchPackageNames": [
                "@types/jest",
                "ts-jest"
            ]
        },
        {
            "groupName": "prettier",
            "matchPackageNames": [
                "/^prettier-.*/"
            ]
        },
        {
            "description": "bump npm dependencies",
            "matchDepTypes": [
                "dependencies"
            ],
            "matchManagers": [
                "npm"
            ],
            "rangeStrategy": "bump"
        }
    ],
    "reviewers": [
        "ITProKyle"
    ]
}
